<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="280dp"
    android:layout_height="wrap_content">
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="가입해 주셔서 감사합니다"
    android:textSize="18sp"
    android:textColor="#de000000"
    android:layout_marginTop="18.3dp"
    android:layout_marginBottom="11.5dp"
    android:textStyle="bold"
    android:layout_marginLeft="24dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:textSize="15sp"
        android:textColor="#8a000000"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="28.8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="예, 알겠습니다"
        android:textSize="15sp"
        android:textColor="#837af1"
        android:layout_marginBottom="27.3dp"
        android:layout_marginLeft="174.9dp"
        android:onClick="OK"/>



</LinearLayout>