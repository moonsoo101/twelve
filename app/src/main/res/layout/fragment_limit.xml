<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".PagerMenu.MainActivity"
    android:id="@+id/refresh"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<FrameLayout
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!--tools:ignore="MergeRootFrame">&ndash;&gt;-->
    <Button
        android:id="@+id/btn_menu"
        android:layout_width="18dp"
        android:layout_height="12dp"
        android:layout_marginLeft="16.3dp"
        android:layout_marginTop="29.3dp"
        android:background="@drawable/btn_menu_wh" />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/mainload"/>

    <Button
        android:id="@+id/rec"
        android:layout_width="19dp"
        android:layout_height="12.7dp"
        android:layout_gravity="right|top"
        android:layout_marginLeft="323dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="29dp"
        android:onClick="record"
        android:background="@drawable/icn_main_mov"/>

    <fr.castorflex.android.verticalviewpager.VerticalViewPager
        android:id="@+id/verticalviewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
</android.support.v4.widget.SwipeRefreshLayout>