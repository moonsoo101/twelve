<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:id="@+id/bigcontainer"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <com.devbrackets.android.exomedia.ui.widget.EMVideoView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/preview"></com.devbrackets.android.exomedia.ui.widget.EMVideoView>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cover" />
        <ProgressBar
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:id="@+id/loading"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/playbtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="193.3sp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_main_play" />
        <!--android:layout_marginTop="193.3dp"-->

        <TextView
            android:id="@+id/text"
            android:layout_width="195dp"
            android:layout_height="73dp"
            android:layout_gravity="left|bottom"
            android:layout_marginBottom="176.5dp"
            android:layout_marginLeft="15.8dp"
            android:layout_marginRight="93dp"
            android:layout_marginTop="383.3dp"
            android:textColor="#fafafa"
            android:gravity="top"
            android:textSize="27sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/goldoryes"
            android:textSize="11.3sp"
            android:textColor="#fafafa"
            android:text="gold"
            android:layout_marginLeft="15.8dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="156dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:id="@+id/countdown"
            android:textSize="15sp"
            android:textColor="#fcef53"
            android:text="loading timer..."
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52.5dp"
            android:id="@+id/title"
            android:textSize="10sp"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginLeft="14.5dp"
            android:layout_marginRight="14.5dp"
            android:layout_marginBottom="132.8dp"
           android:background = "#eeeeee"
            android:layout_gravity="center_horizontal|bottom"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/limitcontainer"
            android:layout_gravity="bottom"
            android:layout_marginBottom="60sp"
            android:layout_marginLeft="15.8dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/profileImage"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@id/nickname"
                    android:textSize="13sp"
                    android:text="dfasf"
                    android:textColor="#ffffff"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@id/entertainment"
                    android:textSize="11.3sp"
                    android:text="dfasf"
                    android:textColor="#ffffff"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="end"
                android:layout_marginRight="14.8dp">
            <Button
                android:layout_width="14dp"
                android:layout_height="18dp"
                android:id="@+id/bookmark"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icn_bookmark_press"/>
            <Button
                android:layout_width="59.3dp"
                android:layout_height="23.3dp"
                android:layout_marginLeft="23.5dp"
                android:id="@+id/addStar"
                android:layout_gravity="center_vertical"
                android:background="@drawable/btn_add_star"/>
            </LinearLayout>
            </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="47.3dp"
            android:layout_marginLeft="14.5dp"
            android:layout_marginRight="14.3dp"
            android:layout_marginBottom="60sp"
            android:background="#6d64de"
            android:layout_gravity="bottom"
            android:textSize="15sp"
            android:textColor="#fafafa"
            android:text="이 사람은 스타가 맞아요!"
            android:id="@+id/yesbtn"/>
    </FrameLayout>

</RelativeLayout>