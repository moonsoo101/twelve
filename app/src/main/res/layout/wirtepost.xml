<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/bigcontainer"
    android:focusable="true"
    android:focusableInTouchMode="true">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <TextureView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/preview"
            android:background="@android:drawable/screen_background_dark_transparent"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/thumbnail" />
        </RelativeLayout>
        <ImageButton
            android:id="@+id/playbtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="@drawable/btn_main_play" />
            <!--android:layout_marginTop="193.3dp"-->

        <EditText
            android:id="@+id/text"
            android:layout_width="195dp"
            android:layout_height="73dp"
            android:layout_gravity="left|bottom"
            android:layout_marginBottom="176.5dp"
            android:layout_marginLeft="15.8dp"
            android:layout_marginRight="93dp"
            android:layout_marginTop="383.3dp"
            android:hint="Write your text here"
            android:gravity="top"
            android:background="@null"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:textSize="27sp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp">
            <Button
                android:id="@+id/cancelbtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/cancel"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_alignParentStart="true"/>
            <Button
                android:id="@+id/savebtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textSize="18sp"
                android:text="완료"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:onClick="save"
                android:gravity="center"
                android:textColor="#ffffff"
                android:background="#00000000"
                android:layout_alignParentEnd="true"/>
            <Button
                android:id="@+id/editbtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textSize="18sp"
                android:text="수정"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:gravity="center"
                android:textColor="#ffffff"
                android:background="#00000000"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>